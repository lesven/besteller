{% extends 'admin/base.html.twig' %}

{% block title %}Neue Gruppe erstellen{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Neue Gruppe erstellen</h1>
    <a href="{{ path('admin_checklist_edit', {'id': checklist.id}) }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Zurück zur Checkliste
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Gruppe für: {{ checklist.title }}</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Titel <span class="text-danger">*</span></label>
                        <input type="text" 
                               class="form-control" 
                               id="title" 
                               name="title" 
                               value="{{ group.title ?? '' }}" 
                               required
                               placeholder="z.B. Hardware-Ausstattung">
                        <div class="form-text">Name der Gruppe, wird als Überschrift angezeigt</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Beschreibung (optional)</label>
                        <textarea class="form-control" 
                                  id="description" 
                                  name="description" 
                                  rows="3"
                                  placeholder="Zusätzliche Informationen zur Gruppe...">{{ group.description ?? '' }}</textarea>
                        <div class="form-text">Wird unterhalb der Überschrift angezeigt</div>
                    </div>

                    <div class="mb-4">
                        <label for="sort_order" class="form-label">Sortierung</label>
                        <input type="number" 
                               class="form-control" 
                               id="sort_order" 
                               name="sort_order" 
                               value="{{ group.sortOrder ?? 0 }}" 
                               min="0"
                               placeholder="0">
                        <div class="form-text">Niedrigere Zahlen werden zuerst angezeigt</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Gruppe erstellen
                        </button>
                        <a href="{{ path('admin_checklist_edit', {'id': checklist.id}) }}" class="btn btn-outline-secondary">Abbrechen</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
